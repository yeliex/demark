  "bugs": {
    "url": "https://github.com/yeliex/oh-markdown/issues"
  },
  "homepage": "https://github.com/yeliex/oh-markdown#readme",
  "devDependencies": {
    "@mdx-js/react": "^2.2.1",
    "@swc/core": "^1.3.22",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.13",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.9.4"
  },
